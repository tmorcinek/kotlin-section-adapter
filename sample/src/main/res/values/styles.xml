<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="background">@color/background_gray</item>
    </style>

    <style name="Header">
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_margin">@dimen/view_margin</item>
    </style>

    <style name="BudgetItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="BudgetItem.Title">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/text_white_secondary</item>
        <item name="android:paddingBottom">@dimen/item_vertical_margin</item>
    </style>
    <style name="BudgetItem.Value">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:paddingBottom">@dimen/item_vertical_margin</item>
    </style>

    <style name="BudgetItem.HeaderTitle">
        <item name="android:textSize">@dimen/item_title_text_size</item>
        <item name="android:textColor">@color/text_white</item>
    </style>
    <style name="BudgetItem.HeaderValue">
        <item name="android:textSize">@dimen/item_value_text_size</item>
        <item name="android:textColor">@color/budget</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BudgetItem.Title.Dark">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    <style name="BudgetItem.HeaderTitle.Dark">
        <item name="android:textColor">@color/text</item>
    </style>

</resources>
